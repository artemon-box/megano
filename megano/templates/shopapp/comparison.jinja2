{% extends 'base.jinja2' %}

{% block content %}
    <div class="Middle">
        <div class="wrap">
            <div class="Product">
                {% if message %}
                    <div style="background-color: orange; color: white; padding: 15px; margin-bottom: 17px;">
                        <h2>{{ message }}</h2>
                    </div>
                {% else %}
                    {% if compare_list|length > 1 %}
                        <div class="ProductCard-cart" style="padding: 0 0 37px 0">
                            <div class="ProductCard-cartElement">
                                <a class="btn btn_primary" href="{% if only_differences %}{{ url('shopapp:compare_list') }}{% else %}{{ url('shopapp:compare_list') }}?only_differences=1{% endif %}">
                                    <img class="btn-icon" src="{{ static('assets/img/icons/card/compare.svg') }}" alt="cart_white.svg"/>
                                    <span class="btn-content">{% if only_differences %}Показать все характеристики{% else %}Показать только различающиеся характеристики{% endif %}</span>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
                <div class="ProductCard">
                    {% if compare_list|length > 1 %}
                        {% for product in products %}
                            <div class="ProductCard-desc">
                                <div class="ProductCard-header">
                                    <h2 class="ProductCard-title">{{ product.product.name }}</h2>
                                    <div class="ProductCard-look">
                                        <div class="ProductCard-photo">
                                            <img src="{{ product.product.image.url }}"
                                                 alt="{{ product.product.image }} image"/>
                                        </div>
                                    </div>
                                    {% if not message %}
                                        <div class="Tabs Tabs_default">
                                            <div class="Tabs-wrap">
                                                <div class="Tabs-block" id="description">
                                                    <div class="table">
                                                        <table>
                                                            <tr>
                                                                <th class="hed">Характеристика</th>
                                                                <th class="hed">Значение</th>
                                                            </tr>
                                                            <tr>
                                                                <td class="comparis" colspan="2"><b>{% if only_differences %}Только различающиеся характеристики{% else %}Все характеристики{% endif %}</b></td>
                                                            </tr>

                                                            {% for feature in product.features %}
                                                                <tr>
                                                                    <td>{{ feature.feature.name }}</td>
                                                                    <td>{{ feature.value.value }}</td>
                                                                </tr>
                                                            {% endfor %}
                                                            <tr>
                                                                <td class="comparis">Продавец</td>
                                                                <td class="comparis">{{ product.seller }}</td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="ProductCard-info">
                                    <div class="ProductCard-cost">
                                        <div class="ProductCard-price">
                                            ${{ product.price }}
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductCard-cart">
                                    <div class="ProductCard-cartElement">
                                        <a class="btn btn_primary" href="{{ url('cart_and_orders:add_to_cart', product.id) }}">
                                            <img class="btn-icon"
                                                 src="{{ static('assets/img/icons/card/cart_white.svg') }}"
                                                 alt="cart_white.svg"/>
                                            <span class="btn-content">Добавить в корзину</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="ProductCard-cart">
                                    <div class="ProductCard-cartElement">
                                        <a class="btn btn_primary"
                                           href="{{ url('shopapp:compare_remove', product.id) }}">
                                            <img class="btn-icon" src="{{ static('assets/img/icons/card/remove.svg') }}"
                                                 alt="remove.svg"/>
                                            <span class="btn-content">Убрать из сравнения</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <h2 style="margin-right: 10%">Недостаточно данных для сравнения.</h2>
                        {% if compare_list|length == 1 %}
                            <div class="ProductCard-cartElement">
                                <a class="btn btn_primary" href="{{ url('shopapp:compare_clear') }}">
                                    <img class="btn-icon" src="{{ static('assets/img/icons/card/remove.svg') }}"
                                         alt="remove.svg"/>
                                    <span class="btn-content">Очистить список</span>
                                </a>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
