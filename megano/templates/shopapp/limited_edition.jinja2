<div class="Section Section_column Section_columnRight">
    <div class="wrap">
        <div class="Section-content">
            <div class="Slider Slider_carousel">
                <header class="Section-header Section-header_close">
                    <h2 class="Section-title">Ограниченный тираж
                    </h2>
                    <div class="Section-control">
                        <div class="Slider-navigate">
                        </div>
                    </div>
                </header>
                <div class="Slider-box Cards">
                            {% for product_seller in limited_edition %}
                                <div class="Slider-item">
                                    <div class="Slider-content">
                                        <div class="Card" style="min-height: 600px;">
                                            <a class="Card-picture"  style="max-height: 350px"
                                               href="{{ url('shopapp:product_detail', product_slug=product_seller.product.slug) }}"><img
                                                    src="{{ product_seller.product.image.url }}"
                                                    alt="{{ product_seller.product.name }}" style="width: 100%; object-fit: contain; object-position: center; height: 100%;"></a>
                                            <div class="Card-content">
                                                <strong class="Card-title"><a
                                                        href="{{ url('shopapp:product_detail', product_slug=product_seller.product.slug) }}">{{ product_seller.product.name }}</a>
                                                </strong>
                                                <div class="Card-description">
                                                    <div class="Card-cost"><span
                                                            class="Card-price">${{ product_seller.price }}</span>
                                                    </div>
                                                    <div class="Card-category">{{ product_seller.product.category.name }}
                                                    </div>
                                                    <div class="Card-hover"><a class="Card-btn"
                                                                               href="{{ url('cart_and_orders:add_to_cart', product_id=product_seller.id) }}"
                                                                               title="Добавить в корзину">
                                                        <img src="{{ static('assets/img/icons/card/cart.svg') }}"
                                                             alt="Добавить в корзину"/>
                                                    </a>
                                                        <a class="Card-btn"
                                                           href="{{ url('shopapp:compare_add', product_id=product_seller.id) }}"
                                                           title="Добавить в список сравнения">
                                                            <img src="{{ static('assets/img/icons/card/compare.svg') }}"
                                                                 alt="Сравнение"/>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
    <script>
    var countdownElement = document.querySelector('.CountDown');
    var currentDate = new Date();
    var endDate = new Date(currentDate);
    endDate.setHours(23, 59, 59, 0);

    function updateCountdown() {
        var currentTime = new Date();
        var timeRemaining = endDate - currentTime;

        var days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
        var hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

        countdownElement.querySelector('.CountDown-days').textContent = days;
        countdownElement.querySelector('.CountDown-hours').textContent = hours;
        countdownElement.querySelector('.CountDown-minutes').textContent = minutes;
        countdownElement.querySelector('.CountDown-secs').textContent = seconds;
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
</script>