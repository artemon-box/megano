{% extends 'base.jinja2' %}

{% block title %}
    Профиль
{% endblock %}

{% block content %}
<div class="Middle Middle_top">

        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                {% set view_page = "profile" %}
                {% include 'profileapp/account_navigation.jinja2' %}
                <div class="Section-content">
                    <div class="Profile">
                        <form class="form Profile-form" action="#" method="post">
                        {% csrf_token %}
                            <div class="row">
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="avatar">Аватар
                                        </label>
                                        <div class="Profile-avatar" style="background-image: url('{{ user.avatar.url if user.avatar else '' }}'); background-repeat: no-repeat; background-position: center center; background-size: contain;">
                                            <label class="Profile-fileLabel" for="avatar">
                                            <img src="{{ static('assets/img/icons/upload.png') }}" alt="upload.png">
                                            Загрузить фото
                                            </label>
                                            <input class="Profile-file form-input" id="avatar" name="avatar" type="file" data-validate="onlyImgAvatar">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="name">ФИО
                                        </label>
                                        {% if form.name.errors %}
                                            <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.name.errors }}</span>
                                        {% endif %}
                                        <input class="form-input" id="name" name="name" type="text" {% if form.name.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{form.name.value()|default_if_none("") }}" data-validate="require">
                                    </div>
                                </div>
                                <div class="row-block">
                                    <div class="form-group">
                                        <label class="form-label" for="phone">Телефон
                                        </label>
                                        {% if form.phone.errors %}
                                            <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.phone.errors }}</span>
                                        {% endif %}
                                        <input class="form-input" id="phone" name="phone" type="text" {% if form.phone.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %}value="{{form.phone.value()|default_if_none("") }}">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="mail">E-mail
                                        </label>
                                        {% if form.email.errors %}
                                            <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.email.errors }}</span>
                                        {% endif %}
                                        <input class="form-input" id="email" name="email" type="text" {% if form.email.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{form.email.value()|default_if_none("") }}" data-validate="require">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="password">Пароль
                                        </label>
                                        {% if form.password.errors %}
                                            <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.password.errors }}</span>
                                        {% endif %}
                                        <input class="form-input" id="password" name="password" type="password" {% if form.password.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} placeholder="Тут можно изменить пароль">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="passwordReply">Подтверждение пароля
                                        </label>
                                        <input class="form-input" id="passwordReply" name="passwordReply" type="password" {% if form.password.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} placeholder="Введите пароль повторно">
                                    </div>
                                    <div class="form-group">
                                        <div class="Profile-btn">
                                            <button class="btn btn_success" type="submit">Сохранить
                                            </button>
                                        </div>
                                        {% if saved %}
                                            <div class="Profile-success">Профиль успешно сохранен
                                        {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block extrascript %}
  <script>
  function getCookie(name) {
    let cookieValue = null;
    if (document.cookie && document.cookie !== '') {
      const cookies = document.cookie.split(';');
      for (let i = 0; i < cookies.length; i++) {
        const cookie = cookies[i].trim();
        if (cookie.substring(0, name.length + 1) === (name + '=')) {
          cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
          break;
        }
      }
    }
    return cookieValue;
  }

  function resetAvatarInput() {
    $('#avatar').val('');
  }

  $(document).ready(function () {
    console.log('1');
    $('#avatar').on('change', function (event) {
      var formData = new FormData();
      var file = event.target.files[0];
      formData.append('avatar', file);

      const csrfToken = getCookie('csrftoken');

      fetch('{{ url('profileapp:profile_avatar') }}', {
        method: 'POST',
        headers: {
          'X-CSRFToken': csrfToken,
        },
        body: formData,
      })
       .then(function (response) {
          return response.json().then(function (json) {
            if (!response.ok) {
                alert(json.message);
                resetAvatarInput();
            } else {
              location.reload();
            }
          });
        })
        .catch(function (error) {
          alert(error);
          resetAvatarInput();
        });
    });
  });
</script>

{% endblock %}