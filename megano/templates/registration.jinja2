{% extends 'base.jinja2' %}

{% block content %}
<div class="row Header-rowMain">
    <div class="row-block Header-logo">
        <a class="logo" href="index.html">
            <img class="logo-image" src="{{ static('assets/img/logo.png') }}" alt="logo.png">
        </a>
    </div>
</div>
<div class="wrap">
    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">Регистрация</h3>
        </div>
        <div class="clear"></div>
        <form action="#" method="post">
            {% csrf_token %}
            <div>
                {% if form.name.errors %}
                <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.name.errors }}</span>
                {% endif %}
                <input class="user-input" type="text" name="name" id="name" placeholder="Имя" {% if form.name.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{ form.name.value()|default_if_none("") }}">
            </div>
            <div>
            {% if form.login.errors %}
                <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.login.errors }}</span>
                {% endif %}
                <input class="user-input" type="email" name="login" id="login" placeholder="E-mail"{% if form.login.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{ form.login.value()|default_if_none("") }}">
            </div>
            <div>
            {% if form.password.errors %}
                <span class="error-text" style="color: rgb(255, 0, 0);>{{ form.password.errors }}</span>
            {% endif %}
                <input class="user-input" type="password" name="password" id="password" placeholder="Пароль"{% if form.password.errors %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{ form.password.value()|default_if_none("") }}">
            </div>
            <input type="submit" value="Зарегистрироваться">
        </form>
    </div>
</div>
{% endblock %}
